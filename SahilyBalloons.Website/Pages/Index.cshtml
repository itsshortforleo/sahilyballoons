@page
@model IndexModel
@{
    ViewData["Title"] = "Sahily Balloons – Balloon Arches, Garlands, Events, Parties & More";
    ViewData["MetaDescription"] = "Sahily Balloons creates stunning balloon arches, garlands, and event decorations in Folsom, CA. Call or text (916) 667-1301 to plan your next event!";
    ViewData["FullWidth"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/hero-video.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<!-- Hero: Static image, Apple.com style — large product title + tagline centered -->
<section class="home-hero" aria-label="Welcome to Sahily Balloons">
    <div class="home-hero-content">
        <h1 class="home-hero-title">Sahily Balloons</h1>
        <p class="home-hero-subtitle">Stunning balloon décor for every occasion</p>
        <div class="home-hero-actions">
            <a href="/Arch" class="hero-btn hero-btn-filled">Learn more</a>
            <a href="/Store" class="hero-btn hero-btn-outline-dark">Shop now</a>
        </div>
    </div>
    <div class="home-hero-image">
        <!-- Replace with your best arch/garland hero photo -->
        <img src="/images/hero-arch.jpg"
             alt="Stunning balloon arch decoration by Sahily Balloons"
             class="home-hero-img"
             loading="eager" />
    </div>
</section>

<!-- Full-width showcase: Balloon Arches (like Apple's iPhone section) -->
<section class="home-section home-section--light fade-in-on-scroll" aria-label="Balloon Arches">
    <h2 class="home-section-title">Balloon Arches</h2>
    <p class="home-section-subtitle">The perfect frame for any entrance or photo backdrop.</p>
    <div class="home-section-actions">
        <a href="/Arch" class="section-link-primary">Learn more ›</a>
        <a href="/Contact" class="section-link-secondary">Get a quote ›</a>
    </div>
    <div class="home-section-image">
        <img src="/images/showcase-arch.jpg"
             alt="Balloon arch decoration"
             loading="lazy" />
    </div>
</section>

<!-- Balloon Garlands (dark background, like Apple's iPad section) -->
<section class="home-section home-section--dark fade-in-on-scroll" aria-label="Balloon Garlands">
    <h2 class="home-section-title">Balloon Garlands</h2>
    <p class="home-section-subtitle">Organic, flowing arrangements that transform any space.</p>
    <div class="home-section-actions">
        <a href="/Garland" class="section-link-primary">Learn more ›</a>
        <a href="/Contact" class="section-link-secondary">Get a quote ›</a>
    </div>
    <div class="home-section-image">
        <img src="/images/showcase-garland.jpg"
             alt="Balloon garland decoration"
             loading="lazy" />
    </div>
</section>

<!-- Two-up row: Walls & Columns (like Apple's two-product row) -->
<div class="home-duo-row">
    <section class="home-duo-card home-duo-card--light fade-in-on-scroll" aria-label="Balloon Walls">
        <h2 class="home-duo-title">Walls &amp; Backdrops</h2>
        <p class="home-duo-subtitle">Statement pieces that wow your guests.</p>
        <div class="home-section-actions">
            <a href="/Wall" class="section-link-primary">Learn more ›</a>
        </div>
        <div class="home-duo-image">
            <img src="/images/showcase-wall.jpg"
                 alt="Balloon wall backdrop"
                 loading="lazy" />
        </div>
    </section>
    <section class="home-duo-card home-duo-card--light fade-in-on-scroll" aria-label="Balloon Columns">
        <h2 class="home-duo-title">Columns</h2>
        <p class="home-duo-subtitle">Elegant vertical accents for pathways &amp; stages.</p>
        <div class="home-section-actions">
            <a href="/Column" class="section-link-primary">Learn more ›</a>
        </div>
        <div class="home-duo-image">
            <img src="/images/showcase-column.jpg"
                 alt="Balloon column decoration"
                 loading="lazy" />
        </div>
    </section>
</div>

<!-- Two-up row: Room Decor & Helium -->
<div class="home-duo-row">
    <section class="home-duo-card home-duo-card--light fade-in-on-scroll" aria-label="Room Decor">
        <h2 class="home-duo-title">Room Décor</h2>
        <p class="home-duo-subtitle">Complete room transformations tailored to your theme.</p>
        <div class="home-section-actions">
            <a href="/RoomDecor" class="section-link-primary">Learn more ›</a>
        </div>
        <div class="home-duo-image">
            <img src="/images/showcase-roomdecor.jpg"
                 alt="Room balloon decoration"
                 loading="lazy" />
        </div>
    </section>
    <section class="home-duo-card home-duo-card--light fade-in-on-scroll" aria-label="Helium Balloons">
        <h2 class="home-duo-title">Helium Balloons</h2>
        <p class="home-duo-subtitle">Classic floating arrangements for every celebration.</p>
        <div class="home-section-actions">
            <a href="/Helium" class="section-link-primary">Learn more ›</a>
        </div>
        <div class="home-duo-image">
            <img src="/images/showcase-helium.jpg"
                 alt="Helium balloon bouquet"
                 loading="lazy" />
        </div>
    </section>
</div>

<!-- Full-width: Corporate Events -->
<section class="home-section home-section--dark fade-in-on-scroll" aria-label="Corporate Events">
    <h2 class="home-section-title">Corporate Events</h2>
    <p class="home-section-subtitle">Professional décor for launches, galas &amp; conferences.</p>
    <div class="home-section-actions">
        <a href="/Corporate" class="section-link-primary">Learn more ›</a>
        <a href="/Contact" class="section-link-secondary">Get a quote ›</a>
    </div>
    <div class="home-section-image">
        <img src="/images/showcase-corporate.jpg"
             alt="Corporate event balloon decoration"
             loading="lazy" />
    </div>
</section>

<!-- Bottom CTA -->
<section class="home-cta fade-in-on-scroll" aria-label="Call to action">
    <h2>Ready to make your event unforgettable?</h2>
    <div class="home-cta-actions">
        <a href="/Store" class="cta-btn cta-btn-filled">Shop now</a>
        <a href="/Contact" class="cta-btn cta-btn-outline">Get a free quote</a>
    </div>
</section>
